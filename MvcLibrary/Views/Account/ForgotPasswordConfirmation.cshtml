@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<h2>Forgot Password Confirmation</h2>

@if (TempData["StatusMessage"] is string statusMessage)
{
    <div class="alert alert-success">@statusMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<p>If an account matching the email address you provided exists, a password reset email has been sent. Please check your email and follow the instructions to reset your password.</p>

<p><a href="@Url.Action("Login", "Account")">Return to login page</a></p>
